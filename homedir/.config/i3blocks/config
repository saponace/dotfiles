interval=10
color=#7ea1a5

[separator]

[cpu_usage]
label=
interval=10
color=#F04DFF

[separator]

[volume]
label=
instance=Master
interval=10
signal=10
color=#6EAAF7

[separator]

# Battery level
[battery]
label=
